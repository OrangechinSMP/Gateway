{
    "name": "Post-Mortem Prank",
    "description": "When on the brink of death you disappear in the blink of an eye, leaving your attackers confused.",
    "type": "origins:multiple",
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "death": {
        "type": "origins:prevent_death",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:clear_effect"
                },
                {
                    "type": "origins:play_sound",
                    "sound": "gateway:origins.genez.fake_death",
                    "pitch": 0.8
                },
                {
                    "type": "origins:apply_effect",
                    "effects": [
                        {
                            "id": "minecraft:speed",
                            "amplifier": 1,
                            "duration": 140,
                            "show_particles": false
                        },
                        {
                            "id": "minecraft:invisibility",
                            "duration": 200,
                            "show_particles": false
                        },
                        {
                            "id": "minecraft:regeneration",
                            "amplifier": 1,
                            "duration": 80,
                            "show_particles": false
                        },
                        {
                            "id": "minecraft:absorption",
                            "duration": 140,
                            "show_particles": false
                        }
                    ]
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:*_resource",
                    "change": -1
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_resource",
            "comparison": "==",
            "compare_to": 1
        }
    },
    "respawn": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:change_resource",
            "resource": "*:*_resource",
            "change": 1
        }
    }
}