                                "pitch": 0.8
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_disguise_check",
                                "change": 1
                            },
                            {
                                "type": "origins:choice",
                                "actions": [
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:zombie"
                                        },
                                        "weight": 100
                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:creeper"
                                        },
                                        "weight": 100
                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:skeleton"
