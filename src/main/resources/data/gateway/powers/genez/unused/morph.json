{
    "name": "Mimicry",
    "description": "You're able to mimic other mobs based on your location. Your disguise is revealed when you take damage.",
    "type": "origins:multiple",
    "disguise_check": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "switch": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else_list",
            "actions": [
                {
                    "condition": {
                        "type": "origins:biome",
                        "biome": "minecraft:deep_dark"
                    },
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:entity.illusioner.mirror_move",
                                "pitch": 0.8
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "walkers switchShape @s minecraft:warden"
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_disguise_check",
                                "change": 1
                            }
                        ]
                    }
                },
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:biome",
                                "biome": "minecraft:mushroom_fields"
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:entity.illusioner.mirror_move",
                                "pitch": 0.8
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "walkers switchShape @s minecraft:mooshroom"
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_disguise_check",
                                "change": 1
                            }
                        ]
                    }
                },
                {
                    "condition": {
                        "type": "origins:and",
                        "conditions": [
                            {
                                "type": "origins:in_block",
                                "block_condition": {
                                    "type": "origins:height",
                                    "comparison": ">",
                                    "compare_to": 52
                                }
                            },
                            {
                                "type": "origins:daytime"
                            }
                        ]
                    },
                    "action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:play_sound",
                                "sound": "minecraft:entity.illusioner.mirror_move",
                                "pitch": 0.8
                            },
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_disguise_check",
                                "change": 1
                            },
                            {
                                "type": "origins:choice",
                                "actions": [
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:cow"
                                        },
                                        "weight": 4
                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:pig"
                                        },
                                        "weight": 5
                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:sheep"
                                        },
                                        "weight": 6
                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s gateway:carmapo"
                                        },
                                        "weight": 2.5
                                    }
                                ]
                            }
                        ]
                    }
                },
                {
                    "condition": {
                        "type": "origins:or",
                        "conditions": [
                            {
                                "type": "origins:daytime",
                                "inverted": true
