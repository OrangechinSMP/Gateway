                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:witch"
                                        },
                                        "weight": 5
                                    },
                                    {
                                        "element": {
                                            "type": "origins:execute_command",
                                            "command": "walkers switchShape @s minecraft:zombie_villager"
                                        },
                                        "weight": 5
                                    }
                                ]
                            }
                        ]
                    }
                }
            ]
        },
        "cooldown": 1200,
        "hud_render": {
            "should_render": true,
            "sprite_location": "gateway:textures/gui/origins/resource_bar.png",
            "bar_index": 6
        }
    },
    "remove_on_damage": {
        "type": "origins:action_when_hit",
        "bientity_action": {
            "type": "origins:target_action",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "*:*_disguise_check",
                        "change": -1
                    },
                    {
                        "type": "origins:execute_command",
                        "command": "walkers switchShape @s normal"
                    },
                    {
                        "type": "origins:play_sound",
                        "sound": "minecraft:entity.illusioner.mirror_move",
                        "pitch": 0.3
                    }
                ]
            }
        },
        "bientity_condition": {
            "type": "target_condition",
            "condition": {
                "type": "origins:resource",
                "resource": "*:*_disguise_check",
                "comparison": "==",
                "compare_to": 1
            }
        }
    },
    "remove_on_death": {
        "type": "origins:action_on_death",
        "bientity_action": {
