{
    "_comment": "thank you McMake",
    "name": "Undead Alliance",
    "description": "Mobs like Zombies and Skeletons will not attack unless provoked.",
    "type": "origins:multiple",
    "uundeadnow": {
        "type": "origins:action_on_callback",
        "entity_action_chosen": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "team add Undead",
                    "permission_level": 4
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join Undead @s",
                    "permission_level": 4
                }
            ]
        },
        "entity_action_lost": {
            "type": "origins:execute_command",
            "command": "team leave @s",
            "permission_level": 4
        },
        "entity_action_respawned": {
            "type": "origins:execute_command",
            "command": "tag @e[type=!minecraft:player,tag=hateunow] remove hateunow"
        }
    },
    "undeadundeadnow": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "team leave @e[tag=hateunow]",
                    "permission_level": 4
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join Undead @e[type=#gateway:jax/undead,tag=!hateunow]",
                    "permission_level": 4
                }
            ]
        },
        "interval": 20
    },
    "umesswithundeadugetundead": {
        "type": "origins:target_action_on_hit",
        "entity_action": {
            "type": "origins:execute_command",
            "command": "execute if entity @s[type=#gateway:jax/undead] run tag @e[team=Undead,type=!minecraft:player,distance=..16] add hateunow",
            "permission_level": 4
        },
        "cooldown": 0,
        "hud_render": {
            "should_render": false
        }
    }
}