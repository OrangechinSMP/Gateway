{
    "name": "Cloud of Daggers",
    "description": "You conjure a cloud of spinning daggers that damages anyone caught inside.",
    "type": "origins:multiple",
    "cooldown": {
        "type": "origins:cooldown",
        "cooldown": 1200,
        "hud_render": {
            "should_render": false
        }
    },
    "charges": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "start_value": 3,
        "hud_render": {
            "comment": "bar done",
            "should_render": true,
            "sprite_location": "gateway:textures/gui/origins/resource_bar.png",
            "bar_index": 4
        }
    },
    "cast": {
        "comment": "ADD CASTING SOUND",
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:raycast",
                    "block": true,
                    "shape_type": "collider",
                    "distance": 18,
                    "block_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:execute_command",
                                "command": "/summon armor_stand ~ ~1 ~ {NoGravity:1b,Silent:1b,Invulnerable:1b,Invisible:1b,Tags:[\"daggers\"],ArmorItems:[{},{},{},{id:\"minecraft:netherite_sword\",count:1,components:{\"minecraft:custom_model_data\":700}}]}"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "power grant @e[tag=daggers] gateway:rudy/dagger_cloud/particles"
                            },
                            {
                                "type": "origins:execute_command",
                                "command": "playsound gateway:origins.rudy.dagger_cloud.cast player @a ~ ~ ~ 1.25"
                            }
                        ]
                    },
                    "hit_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_charges",
                                "change": -1
                            },
                            {
                                "type": "origins:trigger_cooldown",
                                "power": "*:*_cooldown"
                            }
                        ]
                    },
                    "command_along_ray": "particle minecraft:block{block_state:\"minecraft:purple_stained_glass\"}",
                    "command_step": 0.1,
                    "command_along_ray_only_on_hit": false
                }
            ]
        },
        "cooldown": 20,
        "key": {
            "key": "key.origins.secondary_active"
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "*:*_charges",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:resource",
                    "resource": "*:*_cooldown",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
    "sleep_recharge": {
        "type": "origins:action_on_wake_up",
        "entity_action": {
            "type": "origins:change_resource",
            "operation": "set",
            "resource": "*:*_charges",
            "change": 3
        }
    }
}